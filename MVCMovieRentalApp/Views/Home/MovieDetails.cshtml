@model MVCMovieRentalApp.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
}

<h2>@Model.MovieName Details</h2>

<table class="table table-responsive table-hover table-bordered table-striped">
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Movie Name</td>
        <td>@Model.MovieName </td>
    </tr>
    <tr>
        <td>Genre</td>
        <td>@Model.Genre.GenreType</td>
    </tr>
    <tr>
        <td>Release Date</td>
        <td>@Model.ReleaseDate</td>
    </tr>
    <tr>
        <td>Date Added</td>
        <td>@Model.DateAdded</td>
    </tr>
    <tr>
        <td>Stock</td>
        <td>@Model.Stock</td>
    </tr>
</table>

